<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Login.LoginActivity">

    <EditText
        android:id="@+id/new_actuator_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_actuator_nickname"
        android:inputType="text" />

    <EditText
        android:id="@+id/new_actuator_aID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_actuator_id"
        android:inputType="text" />

    <EditText
        android:id="@+id/new_actuator_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_actuator_location"
        android:inputType="text" />

    <EditText
        android:id="@+id/new_actuator_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_actuator_type"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/new_actuator_add"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="@string/add_new_actuator"
            android:textSize="20sp" />

        <Button
            android:id="@+id/new_actuator_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="@android:string/cancel"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>