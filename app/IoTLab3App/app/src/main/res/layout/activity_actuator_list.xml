<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Groups.ActuatorList">

    <TextView
        android:id="@+id/actuator_List_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/actuators_of_chosen_house"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        />

    <ListView
        android:id="@+id/actuator_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/new_actuator"
        app:layout_constraintTop_toBottomOf="@+id/actuator_List_Title"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/new_actuator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New actuator"
        app:layout_constraintTop_toBottomOf="@+id/actuator_list"
        tools:layout_editor_absoluteX="129dp" />

</androidx.constraintlayout.widget.ConstraintLayout>